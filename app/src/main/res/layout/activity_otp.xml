<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/layout3"
    android:isScrollContainer="true"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    tools:context=".HomeDeliveryMedicine.OtpActivity">


     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical">

         <ImageView
             android:layout_width="50sp"
             android:layout_height="50sp"
             android:layout_gravity="center"
             android:layout_marginLeft="10sp"
             android:layout_marginTop="40dp"
             android:layout_marginRight="10sp"
             android:src="@drawable/stopwatch"/>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:orientation="vertical">
             <TextView
                 android:id="@+id/tvTime"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:textStyle="bold"
                 android:textSize="20dp"
                 android:textColor="@color/black"
                 android:gravity="center"
                 android:layout_marginLeft="25dp"
                 android:layout_marginRight="25dp"/>

         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:layout_marginTop="120dp">

             <ImageView
                 android:layout_width="70dp"
                 android:layout_height="70dp"
                 android:layout_gravity="center"
                 android:src="@drawable/pin"/>

             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="Verify your phone number using OTP \nfor secure Delivery"
                 android:textSize="22dp"
                 android:textStyle="bold"
                 android:textColor="@color/black"
                 android:gravity="center"
                 android:layout_marginLeft="10sp"
                 android:layout_marginRight="10sp"/>

         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:weightSum="6"
             android:gravity="center"
             android:layout_marginBottom="10sp">

             <EditText
                 android:id="@+id/edOne"
                 android:layout_width="0dp"
                 android:layout_height="60dp"
                 android:layout_weight="1"
                 android:layout_margin="8dp"
                 android:gravity="center"
                 android:hint="*"
                 android:maxLength="1"
                 android:textColorHint="@color/black"
                 android:background="@drawable/roundconerotp"
                 android:textStyle="bold"
                 android:textSize="25dp"
                 android:inputType="numberPassword"/>
             <EditText
                 android:id="@+id/edTwo"
                 android:layout_width="0dp"
                 android:layout_height="60dp"
                 android:layout_weight="1"
                 android:layout_margin="8dp"
                 android:gravity="center"
                 android:maxLength="1"
                 android:hint="*"
                 android:textColorHint="@color/black"
                 android:background="@drawable/roundconerotp"
                 android:textStyle="bold"
                 android:textSize="25dp"
                 android:inputType="numberPassword"/>
             <EditText
                 android:id="@+id/edThree"
                 android:layout_width="0dp"
                 android:layout_height="60dp"
                 android:layout_weight="1"
                 android:layout_margin="8dp"
                 android:gravity="center"
                 android:hint="*"
                 android:maxLength="1"
                 android:textColorHint="@color/black"
                 android:background="@drawable/roundconerotp"
                 android:textStyle="bold"
                 android:textSize="25dp"
                 android:inputType="numberPassword"/>
             <EditText
                 android:id="@+id/edFour"
                 android:layout_width="0dp"
                 android:layout_height="60dp"
                 android:layout_weight="1"
                 android:layout_margin="8dp"
                 android:gravity="center"
                 android:hint="*"
                 android:maxLength="1"
                 android:textColorHint="@color/black"
                 android:background="@drawable/roundconerotp"
                 android:textStyle="bold"
                 android:textSize="25dp"
                 android:inputType="numberPassword"/>
             <EditText
                 android:id="@+id/edFive"
                 android:layout_width="0dp"
                 android:layout_height="60dp"
                 android:layout_weight="1"
                 android:layout_margin="8dp"
                 android:gravity="center"
                 android:hint="*"
                 android:maxLength="1"
                 android:textColorHint="@color/black"
                 android:background="@drawable/roundconerotp"
                 android:textStyle="bold"
                 android:textSize="25dp"
                 android:inputType="numberPassword"/>
             <EditText
                 android:id="@+id/edSix"
                 android:layout_width="0dp"
                 android:layout_height="60dp"
                 android:layout_weight="1"
                 android:layout_margin="8dp"
                 android:gravity="center"
                 android:maxLength="1"
                 android:hint="*"
                 android:textColorHint="@color/black"
                 android:background="@drawable/roundconerotp"
                 android:textStyle="bold"
                 android:textSize="25dp"
                 android:inputType="numberPassword"/>


         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical">

             <Button
                 android:id="@+id/BtnSubmit"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:textColor="@color/white"
                 android:backgroundTint="@color/black"
                 android:layout_marginLeft="35dp"
                 android:layout_marginRight="35dp"
                 android:layout_marginTop="2dp"
                 android:text="Submit"
                 android:textSize="17dp"
                 android:textStyle="bold"/>
             <Button
                 android:id="@+id/BtnResend"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:textColor="@color/white"
                 android:backgroundTint="@color/black"
                 android:layout_marginLeft="75dp"
                 android:layout_marginRight="75dp"
                 android:layout_marginTop="2dp"
                 android:text="ReSend Otp ?"
                 android:textSize="15dp"
                 android:textStyle="bold"/>


         </LinearLayout>



     </LinearLayout>



</ScrollView>