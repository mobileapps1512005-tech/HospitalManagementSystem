<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:isScrollContainer="true"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    android:background="@color/white"
    tools:context=".PharmacyManageTask.AddPharmacyDetailsFragment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            android:layout_marginLeft="12sp"
            android:layout_marginRight="12sp"
            android:layout_marginTop="60dp"
            app:cardCornerRadius="15sp"
            app:cardBackgroundColor="#FFFFFF">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/pharmacydetailspreview"
                    android:layout_margin="10sp"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/EdName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Pharmacy Name"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:textColorHint="@color/black"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittextcornerround"
                    android:padding="12sp"
                    android:drawableLeft="@drawable/outline_account_circle_24"
                    android:drawablePadding="10sp"/>
                <EditText
                    android:id="@+id/EdPharmacyEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Pharmacy Email"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:textColorHint="@color/black"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittextcornerround"
                    android:padding="12sp"
                    android:drawableLeft="@drawable/outline_attach_email_24"
                    android:drawablePadding="10sp"/>
                <EditText
                    android:id="@+id/EdPharmacist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Pharmacist Duty Name"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:textColorHint="@color/black"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittextcornerround"
                    android:padding="12sp"
                    android:drawableLeft="@drawable/outline_account_circle_24"
                    android:drawablePadding="10sp"/>
                <EditText
                    android:id="@+id/EdPharmacyPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Pharmacy Contact"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:textColorHint="@color/black"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittextcornerround"
                    android:padding="12sp"
                    android:drawableLeft="@drawable/outline_add_call_24"
                    android:drawablePadding="10sp"/>
                <EditText
                    android:id="@+id/EdPharmacyLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Pharmacy Location"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:textColorHint="@color/black"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittextcornerround"
                    android:padding="12sp"
                    android:drawableLeft="@drawable/outline_add_location_alt_24"
                    android:drawablePadding="10sp"/>
                <Spinner
                    android:id="@+id/SpinPharmacyQualification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/customspinner"/>
                <Spinner
                    android:id="@+id/SpinPharmacyEmergency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/customspinner"/>
                <Spinner
                    android:id="@+id/SpinDiscount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/customspinner"/>
                <Spinner
                    android:id="@+id/SpinReturnPolicy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/customspinner"/>
                <Spinner
                    android:id="@+id/SpinEmergencyTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/customspinner"/>
                <Spinner
                    android:id="@+id/SpinHomeDelivery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/customspinner"/>
                <Button
                    android:id="@+id/BtnSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:textColor="@color/white"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10sp"
                    android:backgroundTint="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="60dp"/>

            </LinearLayout>



        </com.google.android.material.card.MaterialCardView>



    </LinearLayout>


</ScrollView>