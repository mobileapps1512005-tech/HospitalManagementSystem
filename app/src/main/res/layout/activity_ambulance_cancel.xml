<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    tools:context=".AmbulanceManageTask.AmbulanceCancelActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:cardCornerRadius="15sp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginLeft="12sp"
            android:layout_marginRight="12sp"
            android:layout_marginTop="60dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="70sp"
                    android:layout_height="70sp"
                    android:layout_gravity="center"
                    android:layout_margin="10sp"
                    android:src="@drawable/ambulancess"/>

                <EditText
                    android:id="@+id/EdName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Please Enter Name"
                    android:textColorHint="@color/black"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_marginLeft="25sp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="30dp"
                    android:padding="12sp"
                    android:drawableLeft="@drawable/outline_account_circle_24"
                    android:drawablePadding="10sp"
                    android:background="@drawable/edittextcornerround"
                    android:layout_marginBottom="2dp"/>
                <EditText
                    android:id="@+id/EdEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Please Enter Email"
                    android:textColorHint="@color/black"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_marginLeft="25sp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:padding="12sp"
                    android:drawableLeft="@drawable/outline_attach_email_24"
                    android:drawablePadding="10sp"
                    android:background="@drawable/edittextcornerround"
                    android:layout_marginBottom="2dp"/>
                <EditText
                    android:id="@+id/EdPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Please Enter Contact Number"
                    android:textColorHint="@color/black"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_marginLeft="25sp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:padding="12sp"
                    android:drawableLeft="@drawable/outline_add_call_24"
                    android:drawablePadding="10sp"
                    android:background="@drawable/edittextcornerround"
                    android:layout_marginBottom="2dp"/>
                <EditText
                    android:id="@+id/EdAlterNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Please Enter Alternative Contact"
                    android:textColorHint="@color/black"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_marginLeft="25sp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:padding="12sp"
                    android:drawableLeft="@drawable/outline_add_call_24"
                    android:drawablePadding="10sp"
                    android:background="@drawable/edittextcornerround"
                    android:layout_marginBottom="2dp"/>
                <EditText
                    android:id="@+id/EdLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Please Enter Properly Location"
                    android:textColorHint="@color/black"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_marginLeft="25sp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:padding="12sp"
                    android:drawableLeft="@drawable/outline_add_location_alt_24"
                    android:drawablePadding="10sp"
                    android:background="@drawable/edittextcornerround"
                    android:layout_marginBottom="2dp"/>
                <Spinner
                    android:id="@+id/SpinAmbulance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/customspinner"/>
                <Button
                    android:id="@+id/BtnSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="70dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:backgroundTint="#FF1200"
                    android:text="Approval Cancel"/>


            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>



    </LinearLayout>

</ScrollView>