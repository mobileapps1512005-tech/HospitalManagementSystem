<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:isScrollContainer="true"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    tools:context=".HomeDeliveryMedicine.AddDetailsDeliveryFragment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            app:cardElevation="0dp"
            android:elevation="0dp"
            app:cardMaxElevation="0dp"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="70dp"
                    android:layout_height="70sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10sp"
                    android:src="@drawable/homedeliveryboy"/>

                <EditText
                    android:id="@+id/edName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittextcornerround"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="2dp"
                    android:hint="Enter Deliver Staff Name"
                    android:textColorHint="@color/black"
                    android:padding="12sp"
                    android:drawableLeft="@drawable/outline_account_circle_24"
                    android:drawablePadding="10sp"
                    android:textSize="13dp"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/edEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittextcornerround"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="2dp"
                    android:hint="Enter Deliver Staff Email"
                    android:textColorHint="@color/black"
                    android:padding="12sp"
                    android:drawableLeft="@drawable/outline_attach_email_24"
                    android:drawablePadding="10sp"
                    android:textSize="13dp"
                    android:textStyle="bold"/>
                <Spinner
                    android:id="@+id/spGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/customspinner"
                    android:layout_marginTop="10sp"/>
                <EditText
                    android:id="@+id/edLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittextcornerround"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="2dp"
                    android:hint="Enter Deliver Staff Location"
                    android:textColorHint="@color/black"
                    android:padding="12sp"
                    android:drawableLeft="@drawable/outline_add_location_alt_24"
                    android:drawablePadding="10sp"
                    android:textSize="13dp"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/edContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittextcornerround"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="2dp"
                    android:hint="Enter Deliver Staff Contact"
                    android:textColorHint="@color/black"
                    android:padding="12sp"
                    android:drawableLeft="@drawable/outline_add_call_24"
                    android:drawablePadding="10sp"
                    android:textSize="13dp"
                    android:textStyle="bold"/>
                <Spinner
                    android:id="@+id/spExperience"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/customspinner"
                    android:layout_marginTop="10sp"/>
                <Button
                    android:id="@+id/BtnSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black"
                    android:text="Submit"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="60dp"/>


            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>


</ScrollView>