<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:isScrollContainer="true"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    tools:context=".GrievanceActivity.UpdateGrievanceActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:cardCornerRadius="15sp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginLeft="12sp"
            android:layout_marginRight="12sp"
            android:layout_marginTop="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="70sp"
                    android:layout_height="70sp"
                    android:layout_gravity="center"
                    android:layout_margin="10sp"
                    android:src="@drawable/grievancesspreview"/>

                <EditText
                    android:id="@+id/edHospital"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Please Enter Hospital Name"
                    android:textColorHint="@color/black"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_marginLeft="25sp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:padding="12sp"
                    android:drawableLeft="@drawable/outline_apartment_24"
                    android:drawablePadding="10sp"
                    android:background="@drawable/edittextcornerround"
                    android:layout_marginBottom="2dp"/>
                <EditText
                    android:id="@+id/edName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Please Enter Patient Name"
                    android:textColorHint="@color/black"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_marginLeft="25sp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:padding="12sp"
                    android:drawableLeft="@drawable/outline_account_circle_24"
                    android:drawablePadding="10sp"
                    android:background="@drawable/edittextcornerround"
                    android:layout_marginBottom="2dp"/>
                <EditText
                    android:id="@+id/edPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Please Enter Contact"
                    android:textColorHint="@color/black"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_marginLeft="25sp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:padding="12sp"
                    android:drawableLeft="@drawable/outline_add_call_24"
                    android:drawablePadding="10sp"
                    android:background="@drawable/edittextcornerround"
                    android:layout_marginBottom="2dp"/>
                <EditText
                    android:id="@+id/edStaff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Please Enter Staff Name"
                    android:textColorHint="@color/black"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_marginLeft="25sp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:padding="12sp"
                    android:drawableLeft="@drawable/outline_attach_email_24"
                    android:drawablePadding="10sp"
                    android:background="@drawable/edittextcornerround"
                    android:layout_marginBottom="2dp"/>
                <EditText
                    android:id="@+id/edGrievance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Please Enter Grievance"
                    android:textColorHint="@color/black"
                    android:textStyle="bold"
                    android:inputType="textMultiLine"
                    android:textSize="13sp"
                    android:layout_marginLeft="25sp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:padding="12sp"
                    android:drawableLeft="@drawable/outline_add_notes_24"
                    android:drawablePadding="10sp"
                    android:background="@drawable/edittextcornerround"
                    android:layout_marginBottom="2dp"/>
                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="40dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/black"
                    android:text="Submit"/>


            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>



    </LinearLayout>


</ScrollView>