<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:isScrollContainer="true"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    tools:context=".AmbulanceManageTask.AmbulanceUpdateActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:cardCornerRadius="15sp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginLeft="12sp"
            android:layout_marginRight="12sp"
            android:layout_marginTop="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="70sp"
                    android:layout_height="70sp"
                    android:layout_gravity="center"
                    android:layout_margin="10sp"
                    android:src="@drawable/ambulancess"/>

                <EditText
                    android:id="@+id/EdName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Please Enter Driver Name"
                    android:textColorHint="@color/black"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_marginLeft="25sp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="30dp"
                    android:padding="12sp"
                    android:drawableLeft="@drawable/outline_account_circle_24"
                    android:drawablePadding="10sp"
                    android:background="@drawable/edittextcornerround"
                    android:layout_marginBottom="2dp"/>
                <EditText
                    android:id="@+id/EdEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Please Enter Driver Email"
                    android:textColorHint="@color/black"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_marginLeft="25sp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:padding="12sp"
                    android:drawableLeft="@drawable/outline_attach_email_24"
                    android:drawablePadding="10sp"
                    android:background="@drawable/edittextcornerround"
                    android:layout_marginBottom="2dp"/>
                <Spinner
                    android:id="@+id/SpinExperience"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/customspinner"/>
                <EditText
                    android:id="@+id/EdLicense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Please Enter Driver License"
                    android:textColorHint="@color/black"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_marginLeft="25sp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:padding="12sp"
                    android:drawableLeft="@drawable/outline_arming_countdown_24"
                    android:drawablePadding="10sp"
                    android:background="@drawable/edittextcornerround"
                    android:layout_marginBottom="2dp"/>
                <EditText
                    android:id="@+id/EdDriverContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Please Enter Driver Contact"
                    android:textColorHint="@color/black"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_marginLeft="25sp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:padding="12sp"
                    android:drawableLeft="@drawable/outline_add_call_24"
                    android:drawablePadding="10sp"
                    android:background="@drawable/edittextcornerround"
                    android:layout_marginBottom="2dp"/>
                <EditText
                    android:id="@+id/EdVehicleNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Please Enter Vehicle Number"
                    android:textColorHint="@color/black"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_marginLeft="25sp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:padding="12sp"
                    android:drawableLeft="@drawable/outline_car_repair_24"
                    android:drawablePadding="10sp"
                    android:background="@drawable/edittextcornerround"
                    android:layout_marginBottom="2dp"/>
                <EditText
                    android:id="@+id/EdHospitalName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Please Enter Hospital Name"
                    android:textColorHint="@color/black"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_marginLeft="25sp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:padding="12sp"
                    android:drawableLeft="@drawable/outline_apartment_24"
                    android:drawablePadding="10sp"
                    android:background="@drawable/edittextcornerround"
                    android:layout_marginBottom="2dp"/>
                <EditText
                    android:id="@+id/EdHospitalContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Please Enter Hospital Contact"
                    android:textColorHint="@color/black"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_marginLeft="25sp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:padding="12sp"
                    android:drawableLeft="@drawable/outline_add_call_24"
                    android:drawablePadding="10sp"
                    android:background="@drawable/edittextcornerround"
                    android:layout_marginBottom="2dp"/>
                <EditText
                    android:id="@+id/EdBaseFare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Please Enter Base Fare Cost"
                    android:textColorHint="@color/black"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_marginLeft="25sp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:padding="12sp"
                    android:drawableLeft="@drawable/outline_currency_rupee_24"
                    android:drawablePadding="10sp"
                    android:background="@drawable/edittextcornerround"
                    android:layout_marginBottom="2dp"/>
                <EditText
                    android:id="@+id/EdPerKmCost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Please Enter Per Km Cost"
                    android:textColorHint="@color/black"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_marginLeft="25sp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:padding="12sp"
                    android:drawableLeft="@drawable/outline_currency_rupee_24"
                    android:drawablePadding="10sp"
                    android:background="@drawable/edittextcornerround"
                    android:layout_marginBottom="2dp"/>
                <EditText
                    android:id="@+id/EdEmergencyCost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Please Enter Emergency Night Cost"
                    android:textColorHint="@color/black"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_marginLeft="25sp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:padding="12sp"
                    android:drawableLeft="@drawable/outline_dark_mode_24"
                    android:drawablePadding="10sp"
                    android:background="@drawable/edittextcornerround"
                    android:layout_marginBottom="2dp"/>
                <Spinner
                    android:id="@+id/SpinDoctor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/customspinner"/>
                <Spinner
                    android:id="@+id/SpinWithOutDoctor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/customspinner"/>
                <Spinner
                    android:id="@+id/SpinAC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/customspinner"/>
                <Spinner
                    android:id="@+id/SpinWithoutAC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/customspinner"/>
                <Spinner
                    android:id="@+id/SpinAmbulancePack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/customspinner"/>
                <Button
                    android:id="@+id/BtnSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="40dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/black"
                    android:text="Submit"/>


            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>



    </LinearLayout>


</ScrollView>