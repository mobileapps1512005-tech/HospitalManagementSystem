<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10sp"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:isScrollContainer="true"
    tools:context=".InsuranceModule.ApplyClaimFragment">



     <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        app:cardCornerRadius="15sp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:src="@drawable/insuranceremovebgpreview"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"/>

            <EditText
                android:id="@+id/etFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Full Name"
                android:background="@drawable/edittextcornerround"
                android:padding="12sp"
                android:textColorHint="@color/black"
                android:textStyle="bold"
                android:textSize="13dp"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="2dp"
                android:drawableLeft="@drawable/outline_account_circle_24"
                android:drawablePadding="10sp"
                android:inputType="textCapWords"/>
            <EditText
                android:id="@+id/etDOB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date of Birth"
                android:padding="12sp"
                android:textColorHint="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="25dp"
                android:textSize="13dp"
                android:layout_marginRight="25dp"
                android:inputType="text"
                android:layout_marginBottom="2dp"
                android:drawableLeft="@drawable/outline_blur_on_24"
                android:drawablePadding="10sp"
                android:background="@drawable/edittextcornerround"/>
            <Spinner
                android:id="@+id/spGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/customspinner"/>
            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contact Number"
                android:inputType="phone"
                android:padding="12sp"
                android:textColorHint="@color/black"
                android:textStyle="bold"
                android:textSize="13dp"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="2dp"
                android:drawableLeft="@drawable/outline_add_call_24"
                android:drawablePadding="10sp"
                android:background="@drawable/edittextcornerround"/>
            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:padding="12sp"
                android:textColorHint="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textSize="13dp"
                android:layout_marginBottom="2dp"
                android:drawableLeft="@drawable/outline_attach_email_24"
                android:drawablePadding="10sp"
                android:background="@drawable/edittextcornerround"
                android:inputType="textEmailAddress"/>
            <EditText
                android:id="@+id/etID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Aadhar / PAN / Passport No"
                android:padding="12sp"
                android:textColorHint="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="25dp"
                android:textSize="13dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="2dp"
                android:drawableLeft="@drawable/outline_apps_24"
                android:drawablePadding="10sp"
                android:background="@drawable/edittextcornerround"
                android:inputType="text"/>
            <EditText
                android:id="@+id/etPolicyNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Policy Number"
                android:padding="12sp"
                android:textColorHint="@color/black"
                android:textStyle="bold"
                android:textSize="13dp"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="2dp"
                android:drawableLeft="@drawable/outline_apps_24"
                android:drawablePadding="10sp"
                android:background="@drawable/edittextcornerround"
                android:inputType="text"/>
            <Spinner
                android:id="@+id/spInsuranceCompany"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/customspinner"/>
            <Spinner
                android:id="@+id/spHospitalBranch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/customspinner"
                android:popupBackground="@color/white" />
            <EditText
                android:id="@+id/etPolicyStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Policy Start Date"
                android:padding="12sp"
                android:textColorHint="@color/black"
                android:textStyle="bold"
                android:textSize="13dp"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="2dp"
                android:drawableLeft="@drawable/outline_calendar_month_24"
                android:drawablePadding="10sp"
                android:background="@drawable/edittextcornerround"/>
            <EditText
                android:id="@+id/etPolicyEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Policy End Date"
                android:padding="12sp"
                android:textColorHint="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="10sp"
                android:textSize="13dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="2dp"
                android:drawableLeft="@drawable/outline_calendar_month_24"
                android:drawablePadding="10sp"
                android:background="@drawable/edittextcornerround"/>
            <EditText
                android:id="@+id/etNomineeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nominee Name"
                android:padding="12sp"
                android:textColorHint="@color/black"
                android:textSize="13dp"
                android:textStyle="bold"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="2dp"
                android:drawableLeft="@drawable/outline_account_circle_24"
                android:drawablePadding="10sp"
                android:background="@drawable/edittextcornerround"
                android:inputType="textCapWords"/>
            <EditText
                android:id="@+id/etHospitalName"
                android:textSize="13dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Hospital Name"
                android:padding="12sp"
                android:textColorHint="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="2dp"
                android:drawableLeft="@drawable/outline_apartment_24"
                android:drawablePadding="10sp"
                android:background="@drawable/edittextcornerround"
                android:inputType="textCapWords"/>
            <Button
                android:id="@+id/btnSubmitClaim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit Claim"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginBottom="70dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#FF1200"
                android:textColor="@color/white"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


</LinearLayout>


</ScrollView>