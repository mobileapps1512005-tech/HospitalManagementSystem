<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:isScrollContainer="true"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    tools:context=".HomeDeliveryMedicine.DeliveryOtpStatusFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            app:cardElevation="0dp"
            app:cardMaxElevation="0dp"
            app:cardCornerRadius="15dp"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginTop="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="10sp"
                    android:layout_gravity="center"
                    android:src="@drawable/homedeliveryboy"/>

                <EditText
                    android:id="@+id/edName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittextcornerround"
                    android:padding="12sp"
                    android:hint="Enter Customer Name"
                    android:drawableLeft="@drawable/outline_account_circle_24"
                    android:drawablePadding="10sp"
                    android:textColorHint="@color/black"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:inputType="text"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="2dp"/>
                <EditText
                    android:id="@+id/edEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittextcornerround"
                    android:padding="12sp"
                    android:hint="Enter Customer Email"
                    android:drawableLeft="@drawable/outline_attach_email_24"
                    android:drawablePadding="10sp"
                    android:textColorHint="@color/black"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:inputType="text"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="2dp"/>
                <EditText
                    android:id="@+id/edPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittextcornerround"
                    android:padding="12sp"
                    android:hint="Enter Contact Number"
                    android:drawableLeft="@drawable/outline_add_call_24"
                    android:drawablePadding="10sp"
                    android:textColorHint="@color/black"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:inputType="phone"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="2dp"/>
                <Button
                    android:id="@+id/BtnSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="60dp"
                    android:backgroundTint="@color/black"
                    android:text="Submit"
                    android:textSize="20dp"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"/>



            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>


</ScrollView>